<!DOCTYPE html>
<html lang="en-us">

<head>
    <title>My Account - AstroMedibles</title>
    <%- include('./head') %>
</head>

<body>

  <%- include('./navbar') %>

  <main class="page login-page">
    <section class="clean-block clean-form dark">
        <div class="container" >

            <div class="block-heading">
                <h2 class="text-info">My Account</h2>
                <p id="directionsLabel">Change your account information here</p>
            </div>

            <form>
                <div id="nameDiv" class="mb-3">
                    <label class="form-label" for="name">First Name</label>
                    <input  class="form-control item" type="text" id="inputName" maxlength="30" value=<%= accountAttributes.name %>>
                </div>

                <div id="emailDiv" class="mb-3">
                    <label class="form-label" for="email">Email</label>
                    <input  class="form-control item" type="email" id="inputEmail" maxlength="100" value=<%= accountAttributes.email %>>
                </div>


                <a href="/forgotPassword">Forgot password</a>

                <!-- <div id="birthdayDiv" class="mb-3">
                    <label class="form-label" for="name">Birthday</label>
                    <input readonly class="form-control item" type="text" id="inputBirthday">
                </div> -->
                
                <!-- <button disabled id="1"  type="button" class="btn btn-primary rounded-pill w-100 mb-3" onclick="">Change Password</button> -->
    
                <br><br>
                <button  id="buttonUpdate"  type="button" class="btn btn-primary rounded-pill w-100" onclick="updateAccountAttributes()">Update</button>

            </form>
        </div>
    </section>
</main>


    <%- include('./footer') %>
    <script type="text/javascript" src="../javascripts/account.js"></script>
</body>
</html>
