<!DOCTYPE html>
<html lang="en-us">

<head>
    <title>Forgot Password - AstroMedibles</title>
    <%- include('./head') %>
</head>

<body>

  <%- include('./navbarLoggedOut') %>

  <main class="page login-page">
    <section class="clean-block clean-form dark">
        <div class="container">
            <div class="block-heading">
                <h2 class="text-info">Forgot Password</h2>
                <p id="directionsLabel">Enter your information to proceed</p>
            </div>
            <form>
                <div id="emailDiv" class="mb-3"><label class="form-label" for="email">Email</label><input class="form-control item" name="email" type="email" id="inputEmail" required></div>
                <div id="verifyDiv" class="mb-3" hidden="true"><label class="form-label" for="code">Verifcation Code</label><input class="form-control" name="code" type="code" id="inputCode" required></div>
                <button id="buttonRequestCode"  type="button" class="btn btn-primary" onclick="forgotPassword()">Request Verification Code</button>
                
                
                <div id="newPasswordDiv"        class="mb-3" hidden="true"><label class="form-label" for="password">New Password</label><input class="form-control" name="password" type="password" id="inputPassword" required></div>
                <div id="newPasswordConfirmDiv" class="mb-3" hidden="true"><label class="form-label" for="passwordConfirm">New Password Confirm</label><input class="form-control" name="passwordConfirm" type="password" id="inputPasswordConfirm" required></div>
                <button id="buttonNewPassword"  type="button" class="btn btn-primary" onclick="updatePassword()" hidden >Submit</button>
                <div id="alertSignIn"></div>
                <br><br>
                <a href="/login">Sign in</a>
            </form>
        </div>
    </section>
</main>
  
  <%- include('./footer') %>
  <script type="text/javascript" src="../javascripts/ForgotPassword.js"></script>
</body>
</html>
